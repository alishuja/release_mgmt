@model IEnumerable<ReleaseMan.Models.Project>
@{
    ViewBag.Title = "Index";
}

<div class="grid_12 secondary-actions">
    <h2>Projects</h2>
    @Html.ActionLink("+ Project", "Create", "Project", null, new { @class = "buttonlink right action-link"})
</div>
<div class="grid_12">
    <ul class="item-list">
    @foreach (var item in Model)
    {
        <li>
            <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
			<div class="bar-wrap"><div class="bar" style="width: 12%;"><p class="center">12&#37;</p></div></div>
            @Html.ActionLink("Edit", "Edit", "Project", new { id = item.ID }, new { @class = "buttonlink right" })
            @Html.ActionLink("Details", "Details", "Project", new { id = item.ID }, new { @class = "buttonlink right" })
            @Html.ActionLink("Delete", "Delete", "Project", new { id = item.ID }, new { @class = "buttonlink right", onclick = "return confirm('Sure you want to delete?');" })
        </li>
    }
    </ul>
</div>